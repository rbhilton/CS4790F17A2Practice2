@model CS4790F17A2Practice.Models.CourseSection

@{
    ViewBag.Title = "CSDetails";
}

<h2>Course Details with Sections</h2>

<div>
    <h4>Course Detail</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-4" id="courseDetails">
               @Html.Partial("DetailsPartial",Model)
               @{/*Html.RenderPartial("DetailsPartial");*/} 
            </div> <!-- Details column -->
            <div class="col-md-6" id="partialEditCourse" name="partialEditCourse">
                
            </div>
            <div class="col-md-2">

            </div>
        </div> <!-- Bootstrap row -->
    </div> <!-- Bootstrap container -->
</div>
<p>
    @Ajax.ActionLink("Edit Course Inline","PartialEdit",new { id = Model.course.Id },new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "partialEditCourse" }) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.course.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
<h4>Course Sections</h4>
 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.sections[0].sectionID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sections[0].sectionNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sections[0].sectionDays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sections[0].sectionTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.sections)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sectionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sectionNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sectionDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sectionTime)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Create New Section", "Create", "Section",new { courseNumber = Model.course.courseNumber },null)
</p>


